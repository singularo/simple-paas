#!/bin/bash
#
# Part of Simple paas
#
# Setup a new host ready to run Simple paas
#

set -euo pipefail

if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root"
  exit 1
fi

usage() {
  echo "Run a simple-paas command."
  exit 1
}

backup() {
  shift
  sp_backup $*
}

list() {
  shift
  sp_list $*
}

prune() {
  shift
  sp_prune $*
}

shell() {
  shift
  sp_shell $*
}

start() {
  shift
  sp_start $*
}

update() {
  shift
  sp_update $*
}

COMMAND=${1:-default}

case ${COMMAND} in
  ba*)
    backup $*
    ;;
  h*|-h|--help)
    usage
    ;;
  l*)
    list $*
    ;;
  p*)
    prune $*
    ;;
  sh*)
    shell $*
    ;;
  st*)
    start $*
    ;;
  u*)
    update $*
    ;;
  *)
    usage
    ;;
esac


